{
    "$schema": "http://json-schema.org/draft-07/schema",
    "properties": {
        "conjur": {
            "properties": {
                "account": {
                    "type": "string"
                },
                "applianceUrl": {
                    "type": "string",
                    "pattern": "(^https:\/\/(.*))|(^HTTPS:\/\/(.*))"
                },
                "certificateFilePath": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "(^files\/(.*))|(^tests\/(.*))"
                },
                "certificateBase64": {
                    "type": "string",
                    "minLength": 1,
                    "pattern": "^(?:[A-Za-z0-9+/]{4})*(?:[A-Za-z0-9+/]{2}==|[A-Za-z0-9+/]{3}=)?$"
                }
            }
        },
        "authnK8s": {
            "properties": {
                "authenticatorId": {
                    "type": "string"
                },
                "clusterRole": {
                    "properties": {
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "serviceAccount": {
                    "properties": {
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                },
                "configMap": {
                    "properties": {
                        "create": {
                            "type": "boolean"
                        },
                        "name": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
